---
/**
 * Uses Page
 *
 * Renders the Uses page content from the pages collection.
 */

import {getEntry, render} from "astro:content";

import {JSONLD} from "../components/seo";
import Prose from "../layouts/Prose.astro";

const page = await getEntry("pages", "uses");

if (!page) {
  return Astro.redirect("/404");
}

const {Content} = await render(page);
---

<Prose
  title={`${page.data.title} | Sam Folorunsho`}
  description={page.data.description}
  heading={page.data.title}
  seo={{
    ogType: "website",
    updatedDate: page.data.updatedDate,
  }}
>
  <JSONLD
    slot="head"
    type="WebPage"
    page={{name: `${page.data.title} | Sam Folorunsho`, description: page.data.description}}
  />
  <Content />
</Prose>
