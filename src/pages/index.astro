---
import Base from '../layouts/Base.astro';
import Hero from '../components/Hero.astro';
import BlogList from '../components/BlogList.astro';

// Placeholder posts - will be replaced with actual content collection data
const posts = [
  { title: 'Building a dual-agent system for semantic parsing', date: '2024-12-12', slug: 'dual-agent-system' },
  { title: 'Notes on structured outputs with Claude', date: '2024-12-08', slug: 'structured-outputs' },
  { title: 'Why intermediate representations matter', date: '2024-12-03', slug: 'intermediate-representations' },
  { title: 'Genuary prep: exploring p5.js patterns', date: '2024-11-28', slug: 'genuary-prep' },
  { title: 'Design systems in enterprise: lessons learned', date: '2024-11-15', slug: 'design-systems' },
];
---

<Base title="Sam Folorunsho">
  <main>
    <Hero />

    <section class="blog-section">
      <BlogList posts={posts} />
    </section>
  </main>
</Base>

<style>
  .blog-section {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-7) var(--container-px) var(--space-9);
  }
</style>
