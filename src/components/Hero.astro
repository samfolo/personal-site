---
/**
 * Hero Component
 *
 * Full viewport hero section with wordmark, navigation, tagline,
 * and scroll hint. The wordmark element is observed by scroll-header.ts
 * to toggle the fixed header visibility.
 */

import {NAV_LINKS} from "../config/navigation";

import HeroWordmark from "./HeroWordmark.astro";
import Nav from "./Nav.astro";

interface Props {
  class?: string;
}

const {class: className} = Astro.props;
---

<section class:list={["hero", className]}>
  <div class="hero-content">
    <!-- Overline Navigation -->
    <div class="hero-header">
      <Nav links={NAV_LINKS} aria-label="Primary navigation" />
    </div>

    <!-- Wordmark (observed by scroll-header.ts via data-scroll-trigger) -->
    <HeroWordmark />

    <!-- Tagline -->
    <p class="hero-tagline">
      Software engineer exploring AI agents, creative coding, and the
      intersection of technology and craft.
    </p>
  </div>

  <!-- Scroll Hint -->
  <div class="scroll-hint">
    <span class="scroll-hint-label">Recent Writing</span>
    <span class="scroll-hint-line" aria-hidden="true"></span>
  </div>
</section>

<style>
  .hero {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    position: relative;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-4) var(--container-px);
  }

  @container page (min-width: 448px) {
    .hero {
      padding: var(--space-5) var(--container-px);
    }
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }

  /* Overline Navigation Container */
  .hero-header {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    margin-bottom: var(--space-6);
  }

  /* Tagline */
  .hero-tagline {
    font-size: var(--text-base);
    color: var(--muted);
    max-width: var(--size-64);
    line-height: var(--leading-normal);
  }

  /* Scroll Hint */
  .scroll-hint {
    position: absolute;
    bottom: var(--space-7);
    left: var(--container-px);
    right: var(--container-px);
    display: flex;
    align-items: center;
    gap: var(--space-4);
    z-index: var(--z-overlay);
  }

  .scroll-hint-label {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-labels);
    color: var(--muted);
    white-space: nowrap;
  }

  .scroll-hint-line {
    flex: 1;
    height: var(--size-px);
    background-color: var(--rule);
  }
</style>
