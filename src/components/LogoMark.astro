---
/**
 * LogoMark Component
 *
 * Site wordmark with responsive abbreviation.
 * Shows "SF." on small containers, "Sam Folorunsho." on larger ones.
 */

interface Props {
  href: string;
  label: string;
  container?: string;
  onClick?: string;
}

const { href, label, container = 'page', onClick } = Astro.props;
---

<a
  href={href}
  class:list={[
    'logomark',
    'min-h-11 inline-flex items-center',
    'font-semibold text-sm tracking-display',
    'transition-opacity duration-150 hover:opacity-80',
    'focus-visible:outline focus-visible:outline-2 focus-visible:outline-fg focus-visible:outline-offset-2',
  ]}
  aria-label={label}
  data-onclick={onClick}
>
  <span class="logomark-full">Sam Folorunsho.</span>
  <span class="logomark-short text-xl">SF.</span>
</a>

<style>
  .logomark {
    color: var(--fg);
  }

  /* Mobile: show short version */
  .logomark-full {
    display: none;
  }

  .logomark-short {
    display: block;
  }

  /* Desktop: show full version */
  @container page (min-width: 32rem) {
    .logomark-full {
      display: block;
    }

    .logomark-short {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .logomark {
      transition: none;
    }
  }
</style>
