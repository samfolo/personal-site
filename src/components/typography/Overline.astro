---
/**
 * Overline Component
 *
 * Uppercase label typography for section headers, metadata labels,
 * and decorative text. Designed for short, single-line content.
 *
 * @example
 * <Overline>Recent Writing</Overline>
 * <Overline tag="h2">December 2024</Overline>
 * <Overline color="fg">Highlighted Label</Overline>
 */

import type {HTMLAttributes} from "astro/types";

import type {BaseTypographyProps} from "./types";

/**
 * Props for the Overline component.
 */
interface Props
  extends BaseTypographyProps, Omit<HTMLAttributes<"span">, "color"> {}

const {
  tag: Tag = "span",
  color = "muted",
  class: className,
  ...attrs
} = Astro.props;
---

<Tag class:list={["sf-overline", `sf-overline-${color}`, className]} {...attrs}>
  <slot />
</Tag>

<style>
  .sf-overline {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-labels);
    line-height: var(--leading-16);
  }

  .sf-overline-muted {
    color: var(--muted);
  }

  .sf-overline-fg {
    color: var(--fg);
  }
</style>
