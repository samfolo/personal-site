---
/**
 * Body Component
 *
 * Muted body text for taglines, descriptions, and secondary content.
 * Uses grid-aligned line-height for vertical rhythm.
 *
 * @example
 * <Body>Software engineer exploring AI agents...</Body>
 * <Body tag="p">No posts to display.</Body>
 * <Body color="fg">Primary body text</Body>
 */

import type {HTMLAttributes} from "astro/types";

import type {BaseTypographyProps} from "./types";

/**
 * Props for the Body component.
 */
interface Props extends BaseTypographyProps, Omit<HTMLAttributes<"span">, "color"> {}

const {
  tag: Tag = "span",
  color = "muted",
  class: className,
  ...attrs
} = Astro.props;
---

<Tag class:list={["sf-body", `sf-body-${color}`, className]} {...attrs}>
  <slot />
</Tag>

<style>
  .sf-body {
    font-size: var(--text-base);
    font-weight: var(--font-regular);
    line-height: var(--leading-24);
  }

  .sf-body-muted {
    color: var(--muted);
  }

  .sf-body-fg {
    color: var(--fg);
  }
</style>
