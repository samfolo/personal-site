---
/**
 * Prose Layout
 *
 * Shared layout for prose content pages (about, uses, blog posts).
 * Provides consistent container structure with header and content sections.
 *
 * Named slots:
 *   - meta: Content after the title (e.g., PostMeta, PostTags)
 *   - before: Content before prose body, outside .prose styling (e.g., BlogList)
 *   - after: Content after the prose body (e.g., PostNav)
 */

import type {SEOConfig} from "../components/seo";
import {SheenText} from "../components/typography";
import type {SheenConfig} from "../config/sheen";
import {LARGE_SHEEN} from "../config/sheen";

import Base from "./Base.astro";

/**
 * Props for the Prose layout.
 */
interface Props {
  /**
   * Page title for the document head.
   */
  title: string;

  /**
   * H1 heading text displayed on the page.
   */
  heading: string;

  /**
   * Meta description for SEO.
   */
  description?: string;

  /**
   * SEO configuration passed through to Base layout.
   */
  seo?: SEOConfig;

  /**
   * Sheen animation configuration.
   * @default LARGE_SHEEN
   */
  sheenConfig?: SheenConfig;

  /**
   * ID attribute for the heading element.
   * @default "page-title"
   */
  headingId?: string;
}

const {
  title,
  heading,
  description,
  seo = {},
  sheenConfig = LARGE_SHEEN,
  headingId = "page-title",
} = Astro.props;

const {ogImage, ogType, publishDate, updatedDate, tags} = seo;
---

<Base
  {title}
  {description}
  {ogImage}
  {ogType}
  {publishDate}
  {updatedDate}
  {tags}
>
  <main class="prose-page">
    <article class="prose-article">
      <header class="prose-header">
        <SheenText
          text={heading}
          tag="h1"
          class="prose-title"
          id={headingId}
          interval={sheenConfig.interval}
          spread={sheenConfig.spread}
        />
        <slot name="meta" />
      </header>
      <slot name="before" />
      <div class="prose">
        <slot />
      </div>
      <slot name="after" />
    </article>
  </main>
</Base>

<style>
  .prose-page {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: calc(var(--header-height) + var(--space-8)) var(--container-px)
      var(--space-9);
  }

  .prose-header {
    margin-bottom: var(--space-7);
  }

  /* :global() required as SheenText renders the h1 in its own scope */
  :global(.prose-title) {
    font-size: clamp(var(--text-xl), 5vw, var(--text-3xl));
    font-weight: var(--font-bold);
    letter-spacing: var(--tracking-display);
    line-height: var(--leading-48);
  }
</style>
