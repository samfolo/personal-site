---
/**
 * Base Layout
 *
 * Provides the HTML document structure with theme support.
 * All pages should use this layout for consistent styling.
 */

import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import FixedHeader from '../components/FixedHeader.astro';
import FixedFooter from '../components/FixedFooter.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import SEO from '../components/SEO.astro';
import JsonLd from '../components/JsonLd.astro';

interface Props {
  title: string;
  description?: string;
  theme?: 'steel' | 'purple' | 'charcoal' | 'teal';
  ogImage?: string;
  ogType?: 'website' | 'article';
  publishDate?: Date;
  updatedDate?: Date;
  tags?: string[];
}

const {
  title,
  description,
  theme = 'steel',
  ogImage,
  ogType = 'website',
  publishDate,
  updatedDate,
  tags,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      publishDate={publishDate}
      updatedDate={updatedDate}
      tags={tags}
    />
    <JsonLd type="WebSite" />

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/Switzer-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- View Transitions for smooth page navigation -->
    <ClientRouter />
  </head>
  <body class={`theme-${theme} @container/page`}>
    <script is:inline>
      (function () {
        var THEME_KEY = 'theme';
        var THEME_CLASSES = ['theme-steel', 'theme-purple', 'theme-charcoal', 'theme-teal'];

        function applyStoredTheme() {
          var saved = localStorage.getItem(THEME_KEY);
          if (saved && THEME_CLASSES.indexOf('theme-' + saved) !== -1) {
            document.body.classList.remove.apply(document.body.classList, THEME_CLASSES);
            document.body.classList.add('theme-' + saved);
          }
        }

        // Apply on initial load
        applyStoredTheme();

        // Reapply after View Transition navigation
        document.addEventListener('astro:after-swap', applyStoredTheme);
      })();
    </script>

    <!-- Initial theme switcher (visible when hero wordmark is in view) -->
    <div id="initial-theme-switcher" class="initial-theme-switcher">
      <ThemeSwitcher />
    </div>

    <FixedHeader />
    <slot />
    <FixedFooter />

    <script>
      import '../scripts/scroll-header.ts';
      import '../scripts/view-transitions.ts';
    </script>
  </body>
</html>

<style>
  .initial-theme-switcher {
    position: fixed;
    top: var(--space-5);
    right: var(--space-5);
    z-index: 90;
    transition: opacity 0.3s ease;
  }

  .initial-theme-switcher.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>
