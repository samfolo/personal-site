---
/**
 * Base Layout
 *
 * Provides the HTML document structure with theme support.
 * All pages should use this layout for consistent styling.
 */

interface Props {
  title: string;
  description?: string;
  theme?: 'steel' | 'purple' | 'charcoal' | 'teal';
}

const {
  title,
  description = 'Personal site',
  theme = 'steel',
} = Astro.props;

import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import FixedHeader from '../components/FixedHeader.astro';
import FixedFooter from '../components/FixedFooter.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/Switzer-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- View Transitions for smooth page navigation -->
    <ClientRouter />
  </head>
  <body class={`theme-${theme}`}>
    <script is:inline>
      (function () {
        var THEME_KEY = 'theme';
        var THEME_CLASSES = ['theme-steel', 'theme-purple', 'theme-charcoal', 'theme-teal'];
        var saved = localStorage.getItem(THEME_KEY);
        if (saved && THEME_CLASSES.indexOf('theme-' + saved) !== -1) {
          document.body.classList.remove.apply(document.body.classList, THEME_CLASSES);
          document.body.classList.add('theme-' + saved);
        }
      })();
    </script>

    <!-- Initial theme switcher (visible when hero wordmark is in view) -->
    <div id="initial-theme-switcher" class="initial-theme-switcher">
      <ThemeSwitcher />
    </div>

    <FixedHeader />
    <slot />
    <FixedFooter />

    <script>
      import '../scripts/scroll-header.ts';
    </script>
  </body>
</html>

<style>
  .initial-theme-switcher {
    position: fixed;
    top: var(--space-5);
    right: var(--space-5);
    z-index: 90;
    transition: opacity 0.3s ease;
  }

  .initial-theme-switcher.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>
