---
/**
 * Base Layout
 *
 * Provides the HTML document structure with theme support.
 * All pages should use this layout for consistent styling.
 */

import {ClientRouter} from "astro:transitions";

import FixedFooter from "../components/FixedFooter.astro";
import FixedHeader from "../components/FixedHeader.astro";
import JSONLD from "../components/JSONLD.astro";
import SEO from "../components/SEO.astro";
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import {THEME_CLASSES} from "../config/themes";
import "../styles/global.css";
import type {OGType, Theme} from "../types";

interface Props {
  title: string;
  description?: string;
  theme?: Theme;
  ogImage?: string;
  ogType?: OGType;
  publishDate?: Date;
  updatedDate?: Date;
  tags?: string[];
}

const {
  title,
  description,
  theme = "steel",
  ogImage,
  ogType = "website",
  publishDate,
  updatedDate,
  tags,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={`theme-${theme}`}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" data-favicon />
    <link rel="apple-touch-icon" href="/sf-steel-apple-touch.png" />
    <meta name="theme-color" content="#191d21" data-theme-color />
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme") || "steel";
        const favicon = document.querySelector("link[data-favicon]");
        if (favicon) {
          favicon.href = "/sf-" + theme + ".ico";
        }
      })();
    </script>
    <script is:inline>
      // Hex values from src/lib/theme.ts THEME_COLOURS.bg
      (function () {
        const colours = {
          steel: "#191d21",
          purple: "#1e1a24",
          charcoal: "#212121",
          teal: "#0d1f1f",
        };

        const applyThemeColour = () => {
          const theme = localStorage.getItem("theme") || "steel";
          const meta = document.querySelector("meta[data-theme-color]");
          if (meta && colours[theme]) {
            meta.content = colours[theme];
          }
        };

        applyThemeColour();
        document.addEventListener("astro:after-swap", applyThemeColour);
      })();
    </script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      publishDate={publishDate}
      updatedDate={updatedDate}
      tags={tags}
    />
    <JSONLD type="WebSite" />

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/Switzer-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- View Transitions for smooth page navigation -->
    <ClientRouter />
  </head>
  <body class="@container/page min-h-dvh">
    <script is:inline define:vars={{THEME_CLASSES}}>
      (function () {
        const THEME_KEY = "theme";

        const applyStoredTheme = () => {
          const saved = localStorage.getItem(THEME_KEY);
          if (saved && THEME_CLASSES.indexOf("theme-" + saved) !== -1) {
            document.documentElement.classList.remove(...THEME_CLASSES);
            document.documentElement.classList.add("theme-" + saved);
          }
        };

        // Apply on initial load
        applyStoredTheme();

        // Reapply after View Transition navigation
        document.addEventListener("astro:after-swap", applyStoredTheme);

        // Preserve favicon href during View Transitions (avoid re-fetching)
        document.addEventListener("astro:before-swap", (e) => {
          const currentFavicon = document.querySelector("link[data-favicon]");
          const newFavicon = e.newDocument.querySelector("link[data-favicon]");
          if (currentFavicon && currentFavicon.href && newFavicon) {
            newFavicon.href = currentFavicon.href;
          }
        });
      })();
    </script>

    <!-- Initial theme switcher (visible when hero wordmark is in view) -->
    <div id="initial-theme-switcher" class="initial-theme-switcher">
      <ThemeSwitcher />
    </div>

    <FixedHeader />
    <slot />
    <FixedFooter />

    <script>
      import "../scripts/scroll-header.ts";
    </script>
  </body>
</html>

<style>
  .initial-theme-switcher {
    position: fixed;
    top: calc(var(--space-5) + var(--safe-area-top));
    right: var(--space-5);
    z-index: var(--z-overlay);
    transition: opacity var(--transition-slow);
  }

  .initial-theme-switcher.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>
