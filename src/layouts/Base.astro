---
/**
 * Base Layout
 *
 * Provides the HTML document structure with theme support.
 * All pages should use this layout for consistent styling.
 */

import {Font} from "astro:assets";
import {ClientRouter} from "astro:transitions";

import {FixedFooter, SiteHeader} from "../components/chrome";
import {SEO} from "../components/seo";
import {STORAGE_KEYS} from "../config/storage";
import {THEME_CLASSES} from "../config/themes";
import type {Theme} from "../config/themes";
import {THEME_COLOURS} from "../lib/theme";
import "../styles/global.css";
import type {OGType} from "../types";

const THEME_BG_COLOURS = Object.fromEntries(
  Object.entries(THEME_COLOURS).map(([theme, colours]) => [theme, colours.bg])
);

/**
 * Props for the Base layout.
 */
interface Props {
  /**
   * Page title for the document.
   */
  title: string;

  /**
   * Meta description for SEO.
   */
  description?: string;

  /**
   * Initial theme to render.
   */
  theme?: Theme;

  /**
   * Open Graph image path.
   */
  ogImage?: string;

  /**
   * Open Graph content type.
   */
  ogType?: OGType;

  /**
   * Article publish date for structured data.
   */
  publishDate?: Date;

  /**
   * Article last updated date for structured data.
   */
  updatedDate?: Date;

  /**
   * Article tags for structured data.
   */
  tags?: string[];
}

const {
  title,
  description,
  theme = "steel",
  ogImage,
  ogType = "website",
  publishDate,
  updatedDate,
  tags,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={`theme-${theme}`}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" data-favicon />
    <link rel="apple-touch-icon" href="/sf-steel-apple-touch.png" />
    <meta name="theme-color" content="#191d21" data-theme-color />
    <script is:inline define:vars={{THEME_STORAGE_KEY: STORAGE_KEYS.THEME}}>
      (function () {
        const theme = localStorage.getItem(THEME_STORAGE_KEY) || "steel";
        const favicon = document.querySelector("link[data-favicon]");
        if (favicon) {
          favicon.href = "/sf-" + theme + ".ico";
        }
      })();
    </script>
    <script
      is:inline
      define:vars={{THEME_STORAGE_KEY: STORAGE_KEYS.THEME, THEME_BG_COLOURS}}
    >
      (function () {
        const applyThemeColour = () => {
          const theme = localStorage.getItem(THEME_STORAGE_KEY) || "steel";
          const meta = document.querySelector("meta[data-theme-color]");
          if (meta && THEME_BG_COLOURS[theme]) {
            meta.content = THEME_BG_COLOURS[theme];
          }
        };

        applyThemeColour();
        document.addEventListener("astro:after-swap", applyThemeColour);
      })();
    </script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <SEO
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={ogType}
      publishDate={publishDate}
      updatedDate={updatedDate}
      tags={tags}
    />
    <slot name="head" />

    <!-- Preload critical fonts -->
    <Font cssVariable="--font-switzer" preload />

    <!-- View Transitions for smooth page navigation -->
    <ClientRouter />
  </head>
  <body class="@container/page min-h-dvh">
    <script
      is:inline
      define:vars={{THEME_CLASSES, THEME_STORAGE_KEY: STORAGE_KEYS.THEME}}
    >
      (function () {
        const applyStoredTheme = () => {
          const saved = localStorage.getItem(THEME_STORAGE_KEY);
          if (saved && THEME_CLASSES.indexOf("theme-" + saved) !== -1) {
            document.documentElement.classList.remove(...THEME_CLASSES);
            document.documentElement.classList.add("theme-" + saved);
          }
        };

        // Apply on initial load
        applyStoredTheme();

        // Reapply after View Transition navigation
        document.addEventListener("astro:after-swap", applyStoredTheme);

        // Apply theme to new document BEFORE swap to prevent flash
        document.addEventListener("astro:before-swap", (e) => {
          const saved = localStorage.getItem(THEME_STORAGE_KEY);
          if (saved && THEME_CLASSES.indexOf("theme-" + saved) !== -1) {
            e.newDocument.documentElement.classList.remove(...THEME_CLASSES);
            e.newDocument.documentElement.classList.add("theme-" + saved);
          }

          // Preserve favicon href during View Transitions (avoid re-fetching)
          const currentFavicon = document.querySelector("link[data-favicon]");
          const newFavicon = e.newDocument.querySelector("link[data-favicon]");
          if (currentFavicon && currentFavicon.href && newFavicon) {
            newFavicon.href = currentFavicon.href;
          }

          // Sync header state to destination before snapshot
          const header = document.getElementById("site-header");
          if (header) {
            const isNavigatingToHome =
              new URL(e.to, location.origin).pathname === "/";
            header.dataset.state = isNavigatingToHome ? "hero" : "scrolled";
          }
        });
      })();
    </script>

    <SiteHeader />
    <slot />
    <FixedFooter />

    <script>
      import "../scripts/scroll-header.ts";
    </script>
  </body>
</html>

